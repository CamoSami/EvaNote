<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_6sdp"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/noteSubTaskCheckBox"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:gravity="center_vertical"
        android:text=""
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/noteSubTaskCheckBox" />

    <EditText
        android:id="@+id/noteSubTaskTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:text="awhdauwhauoahwdoahdoawhdouawhdoahwdaudhoauwaoiwhdaowhoaihdoaiwhdoaihdoaiwhoapawidaowidoahwdoawhdoauwhdoauwhdoauwhdaoduhaowdhaowuhdoawhoauhowuhdoawhd"
        android:textSize="@dimen/_16ssp"
        android:textColor="?android:attr/textColorPrimary"
        android:textColorHint="?android:attr/textColorSecondary"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/noteSubTaskCheckBox"
        app:layout_constraintEnd_toStartOf="@id/noteSubTaskDelete"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/noteSubTaskDelete"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/icon_delete"
        app:tint="?android:attr/textColorPrimary"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/noteSubTaskCheckBox"/>

</androidx.constraintlayout.widget.ConstraintLayout>